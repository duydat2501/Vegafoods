<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Fruity Dashboard</title>
    <link rel="shortcut icon" type="image/png" href="~/Admin/assets/images/logos/favicon.png" />
    <link rel="stylesheet" href="~/Admin/assets/css/styles.min.css" />
    <link rel="stylesheet" href="~/Admin/assets/libs/fontAwesome/css/all.min.css" />
    <link rel="stylesheet" href="~/Admin/assets/libs/DataTables/datatables.min.css" />
    <link rel="stylesheet" href="~/Admin/assets/libs/jquery-confirm/dist/jquery-confirm.min.css" />
    @await RenderSectionAsync("Header", required: false)
</head>
<body>
    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full" data-sidebar-position="fixed" data-header-position="fixed">
        <aside class="left-sidebar">
            <div>
                <div class="brand-logo d-flex align-items-center justify-content-between">
                    <h3>VegeFood Admin</h3>
                    <div class="close-btn d-xl-none d-block sidebartoggler cursor-pointer" id="sidebarCollapse">
                        <i class="ti ti-x fs-8"></i>
                    </div>
                </div>
                <nav class="sidebar-nav scroll-sidebar" data-simplebar>
                    <ul id="sidebarnav">
                        <li class="sidebar-item">
                            <a class="sidebar-link" href="/Admin" aria-expanded="false">
                                <i class="ti ti-layout-dashboard"></i>
                                <span class="hide-menu">Tổng quan</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" href="/Admin/Category/List" aria-expanded="false">
                                <i class="fa-solid fa-layer-group"></i>
                                <span class="hide-menu">Danh mục</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" href="/Admin/Product/List" aria-expanded="false">
                                <i class="fa-solid fa-pepper-hot"></i>
                                <span class="hide-menu">Sản phẩm</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" href="/Admin/Banner/List" aria-expanded="false">
                                <i class="fa-regular fa-image"></i>
                                <span class="hide-menu">Banner</span>
                            </a>
                        </li> 
                        <li class="nav-small-cap">
                            <i class="ti ti-dots nav-small-cap-icon fs-4"></i>
                            <span class="hide-menu">Administration</span>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" href="/Admin/Login" aria-expanded="false">
                                <i class="ti ti-user"></i>
                                <span class="hide-menu">User</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>
        <div class="body-wrapper">
            <header class="app-header">
                <nav class="navbar navbar-expand-lg navbar-light">
                    <ul class="navbar-nav">
                        <li class="nav-item d-block d-xl-none">
                            <a class="nav-link sidebartoggler nav-icon-hover" id="headerCollapse" href="javascript:void(0)">
                                <i class="ti ti-menu-2"></i>
                            </a>
                        </li>
                    </ul>
                    <div class="navbar-collapse justify-content-end px-0" id="navbarNav">
                        <ul class="navbar-nav flex-row ms-auto align-items-center justify-content-end">
                            <li class="nav-item dropdown">
                                <a class="nav-link nav-icon-hover" href="javascript:void(0)" id="drop2" data-bs-toggle="dropdown" aria-expanded="false">
                                    <img src="~/Admin/assets/images/profile/user-1.jpg" alt="" width="35" height="35" class="rounded-circle" />
                                </a>
                                <div class="dropdown-menu dropdown-menu-end dropdown-menu-animate-up" aria-labelledby="drop2">
                                    <div class="message-body">
                                        <a href="javascript:void(0)" class="d-flex align-items-center gap-2 dropdown-item">
                                            <i class="ti ti-user fs-6"></i>
                                            <p class="mb-0 fs-3">My Profile</p>
                                        </a>
                                        <a href="javascript:void(0)" class="d-flex align-items-center gap-2 dropdown-item">
                                            <i class="ti ti-mail fs-6"></i>
                                            <p class="mb-0 fs-3">My Account</p>
                                        </a>
                                        <a href="javascript:void(0)" class="d-flex align-items-center gap-2 dropdown-item">
                                            <i class="ti ti-list-check fs-6"></i>
                                            <p class="mb-0 fs-3">My Task</p>
                                        </a>
                                        <a href="/Admin/Logout" class="btn btn-outline-primary mx-3 mt-2 d-block">Logout</a>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </nav>
            </header>
            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- JavaScript Libraries -->
    <script src="~/Admin/assets/libs/jquery/dist/jquery.min.js"></script>
    <script src="~/Admin/assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Admin/assets/js/sidebarmenu.js"></script>
    <script src="~/Admin/assets/js/app.min.js"></script>
    <script src="~/Admin/assets/libs/apexcharts/dist/apexcharts.min.js"></script>
    <script src="~/Admin/assets/libs/simplebar/dist/simplebar.js"></script>
    <script src="~/Admin/assets/js/dashboard.js"></script>
    <script src="~/Admin/assets/libs/jquery-confirm/dist/jquery-confirm.min.js"></script>
    <script src="~/Admin/assets/libs/DataTables/datatables.min.js"></script>
     <script src="~/Admin/assets/libs/ckeditor/build/ckeditor.js"></script>

    <!-- Template Javascript -->
    <script src="~/Admin/assets/js/main.js"></script>
    @await RenderSectionAsync("Footer", required: false)
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
